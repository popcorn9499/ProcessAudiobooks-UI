<Window x:Class="ProcessAudiobooks_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessAudiobooks_UI.CustomControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="632" Width="960">
    <Grid>
        <TabControl SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Audiobooks">
                <Grid>
                    <local:EnhancedListView x:Name="eLvAudiobook" Margin="0,0,101,0">
                        <local:EnhancedListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                                <GridViewColumn Header="Output Name" DisplayMemberBinding="{Binding outputName}" Width="200"/>
                                <GridViewColumn Header="Album" DisplayMemberBinding="{Binding Album}" Width="80"/>
                                <GridViewColumn Header="Genre" DisplayMemberBinding="{Binding Genre}" Width="80"/>
                                <GridViewColumn Header="Year" DisplayMemberBinding="{Binding Year}" Width="50"/>
                                <GridViewColumn Header="Writer" DisplayMemberBinding="{Binding Writer}" Width="100"/>
                            </GridView>
                        </local:EnhancedListView.View>
                    </local:EnhancedListView>
                    <Button Content="Edit Book" HorizontalAlignment="Left" Margin="876,35,0,0" VerticalAlignment="Top"/>
                    <Button Content="Add Book" HorizontalAlignment="Left" Margin="876,10,0,0" VerticalAlignment="Top"/>
                    <Button Content="Delete Book" HorizontalAlignment="Left" Margin="876,60,0,0" VerticalAlignment="Top"/>


                </Grid>
            </TabItem>
            <TabItem Header="Setting">
                <Grid Background="#FFE5E5E5">
                    <Grid/>
                    <GroupBox Header="SSH Connection" Margin="498,10,10,435"/>
                    <Grid>
                        <Label Content="IP Address:" HorizontalAlignment="Left" Margin="514,27,0,0" VerticalAlignment="Top"/>
                        <Label Content="Username:" HorizontalAlignment="Left" Margin="514,57,0,0" VerticalAlignment="Top"/>
                        <Label Content="Password:" HorizontalAlignment="Left" Margin="514,88,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="tbSshIP" HorizontalAlignment="Left" Margin="587,32,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="231" Height="21"/>
                        <TextBox x:Name="tbSshUsername" HorizontalAlignment="Left" Margin="587,61,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="154"/>
                        <PasswordBox x:Name="pbSshPassword" HorizontalAlignment="Left" Margin="587,94,0,474" Width="154"/>
                        <Label Content="Port:" HorizontalAlignment="Left" Margin="766,57,0,0" VerticalAlignment="Top"/>
                        <TextBox x:Name="tbSshPort" HorizontalAlignment="Left" Margin="805,61,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                        <Label HorizontalAlignment="Left" Margin="507,167,0,0" VerticalAlignment="Top"/>

                    </Grid>
                    <Label Content="Operation Path Remote:" HorizontalAlignment="Left" Margin="528,233,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="tbLocalPath" HorizontalAlignment="Left" Margin="528,210,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="406"/>
                    <Label Content="Operation Path Local:" HorizontalAlignment="Left" Margin="528,179,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="tbRemotePath" HorizontalAlignment="Left" Margin="528,264,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="406"/>
                    <Button x:Name="btnFindLocalPathDirectory" Content="Find Path" HorizontalAlignment="Left" Margin="656,182,0,0" VerticalAlignment="Top" Click="btnFindLocalPathDirectory_Click"/>
                    <Label Content="Command:" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="tbCommand" HorizontalAlignment="Left" Margin="10,52,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="467"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
