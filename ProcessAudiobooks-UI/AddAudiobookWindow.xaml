<Window x:Class="ProcessAudiobooks_UI.AddAudiobookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessAudiobooks_UI"
        mc:Ignorable="d"
        Title="AddAudiobookWindow" Height="450" Width="800"  AllowDrop="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Margin="188,3,511,403">Drop Files Here</Label>
        <ListBox x:Name="listFiles" Grid.Row="1" Margin="188,36,0,8" Drop="listFiles_Drop"></ListBox>
        <Button x:Name="btnClearSelectedFiles" Content="Clear Selected Files" HorizontalAlignment="Left" Margin="301,6,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Button x:Name="btnClearAllFiles" Content="Clear All Files" HorizontalAlignment="Left" Margin="444,6,0,0" Grid.Row="1" VerticalAlignment="Top"/>
    </Grid>

</Window>
